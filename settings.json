		{
			"before": ["<c-h>"],
			"after": ["^"]
		},
		{
			"before": ["<c-l>"],
			"after": ["$"]
		},
		// move up and down by x lines
		{
			"before": ["J"],
			"after": ["5", "j"]
		},
		{
			"before": ["K"],
			"after": ["5", "k"]
		},
		// move left and right by x words
		{
			"before": ["H"],
			"after": ["2", "b"]
		},
		{
			"before": ["L"],
			"after": ["2", "w"]
		},
		// scroll up and down
		{
			"before": ["<c-j>"],
			"after": ["<c-d>"]
		},
		{
			"before": ["<c-k>"],
			"after": ["<c-u>"]
		},
		{
			"before": ["<c-d>"],
			"after": ["<c-f>"]
		},
		{
			"before": ["<c-f>"],
			"after": ["<c-b>"]
		},
		// move between tabs
		{
			"before": ["<c-n>"],
			"commands": ["workbench.action.nextEditorInGroup"]
		},
		{
			"before": ["<c-m>"],
			"commands": ["workbench.action.previousEditorInGroup"]
		},
		// move between splits
		{
			"before": ["<c-u>"],
			"after": []
		},
		{
			"before": ["<c-u>", "h"],
			"after": ["<c-w>", "h"]
		},
		{
			"before": ["<c-u>", "j"],
			"after": ["<c-w>", "j"]
		},
		{
			"before": ["<c-u>", "k"],
			"after": ["<c-w>", "k"]
		},
		{
			"before": ["<c-u>", "l"],
			"after": ["<c-w>", "l"]
		},
		// comment
		{
			"before": ["<leader>", "c"],
			"commands": ["editor.action.commentLine"]
		},
		{
			"before": ["<leader>", "C"],
			"commands": ["editor.action.blockComment"]
		},
		// easy visual indentation
		{
			"before": [">"],
			"after": [">", "g", "v"]
		},
		{
			"before": ["<"],
			"after": ["<", "g", "v"]
		},
		// copilot
		{
			"before": ["<leader>", "i", "i"],
			"commands": ["github.copilot.toggleCopilot"]
		},
		{
			"before": ["<leader>", "i", "c"],
			"commands": ["workbench.action.openQuickChat.copilot"]
		},
		{
			"before": ["<leader>", "i", "g"],
			"commands": ["github.copilot.interactiveEditor.generate"]
		},
		{
			"before": ["<leader>", "i", "d"],
			"commands": ["github.copilot.interactiveEditor.generateDocs"]
		},
		{
			"before": ["<leader>", "i", "t"],
			"commands": ["github.copilot.interactiveEditor.generateTests"]
		},
		{
			"before": ["<leader>", "i", "e"],
			"commands": ["github.copilot.interactiveEditor.explain"]
		},
		{
			"before": ["<leader>", "i", "f"],
			"commands": ["github.copilot.interactiveEditor.fix"]
		},
		// hide panels
		{
			"before": ["<leader>", "h", "d"],
			"commands": ["workbench.action.closePanel"]
		},
		{
			"before": ["<leader>", "h", "s"],
			"commands": ["workbench.action.closeSidebar"]
		},
		{
			"before": ["<leader>", "h", "a"],
			"commands": [
				"workbench.action.closePanel",
				"workbench.action.closeSidebar",
			]
		},
		// other
		{
			"before": ["<leader>", "p"],
			"commands": ["workbench.action.showCommands"]
		},
		{
			"before": ["<leader>", "/"],
			"commands": [":noh"]
		},
		{
			"before": ["<leader>", "'"],
			"commands": [":reg"]
		},
	],
}
